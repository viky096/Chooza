@model Models.DatabaseModels.UniversityViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Content/admin/_layout.cshtml";
}

<br />

<div class="add_margin">
@using (Html.BeginForm("Create", "University", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Add University</legend>

        <div class="control-label">
           Name
        </div>
        <div class="controls">
            @Html.TextBoxFor(model => model.Name, new { @class = "large m-wrap" } )
            
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="control-label">
            City
        </div>
        <div class="controls">
            @Html.TextBoxFor(model => model.City,new { @class = "large m-wrap" })
            @Html.ValidationMessageFor(model => model.City)
        </div>

        <div class="control-label">
          Introduction
        </div>
        <div class="controls">
            @Html.TextAreaFor(model => model.Introduction,new { @class = "span12 wysihtml5 m-wrap" , @rows="6" })
            @Html.ValidationMessageFor(model => model.Introduction)
        </div>

        <div class="control-label">
           Admission Details
        </div>
        <div class="controls">
            @Html.TextAreaFor(model => model.Admission_details,new { @class = "span12 wysihtml5 m-wrap", @rows="6" })
            @Html.ValidationMessageFor(model => model.Admission_details)
        </div>

        <div class="control-label">
            Image
        </div>
        <div class="controls">
            @Html.TextBoxFor(model => model.FileName,new { type = "file" })
            @Html.ValidationMessageFor(model => model.FileName)
        </div>
        <div class="control-label">
           Website
        </div>
        <div class="controls">
            @Html.TextBoxFor(model => model.Website,new { @class = "large m-wrap" })
            @Html.ValidationMessageFor(model => model.Website)
        </div>
        <div class="control-label">
            Address
        </div>
        <div class="controls">
            @Html.TextBoxFor(model => model.Address,new { @class = "large m-wrap" })
            @Html.ValidationMessageFor(model => model.Address)
        </div>
        <div class="control-label">
           Sector
        </div>
        <div class="controls">
            @Html.TextBoxFor(model => model.Sector,new { @class = "large m-wrap" })
            @Html.ValidationMessageFor(model => model.Sector)
        </div>
        <div class="control-label">
           Programs
        </div>
        <div class="controls">
            @Html.ListBox("Programs")
            
        </div>

        <p>
            <input type="submit" value="Add" class="btn blue" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
    </div>
