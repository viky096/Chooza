
@model Models.DatabaseModels.ProgramViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Content/admin/_Layout.cshtml";
}
<div class="add_margin">
    <br />
<p>
    @Html.ActionLink("Create New", "Create",new Object { },  new { @class = "btn" })
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.ProgramOverview)
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in ViewBag.programList) {
    <tr>
        <td>
            @item.Name
        </td>
        
        <td>
            @item.ProgramOverview
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id },new { @class = "btn mini purple" }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id },new { @class = "btn mini black" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id },new { @class = "btn mini blue" })
        </td>
    </tr>
}

</table>
</div>