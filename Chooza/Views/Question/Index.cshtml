@model IEnumerable<Models.DatabaseModels.QuestionViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Content/admin/_Layout.cshtml";
}

<div class="add_margin">
<br />
<p>
    @Html.ActionLink("Add New Question", "Create", new Object { },  new { @class = "btn" })
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
           Statement
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Result)
        </th>
        
        
        <th>Actions</th>
    </tr>

@foreach (var item in ViewBag.QuestionList)
{
    <tr>
        <td>
            @item.Statement
        </td>
        
        <td>
            @item.Result
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=@item.Id},new { @class = "btn mini purple" })  |
            @Html.ActionLink("Details", "Details",new { id=@item.Id },new { @class = "btn mini black" })|
            @Html.ActionLink("Delete", "Delete", new { id=@item.Id },new { @class = "btn mini blue" })
        </td>
    </tr>
}

</table>
</div>