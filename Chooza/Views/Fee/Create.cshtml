@model Models.DatabaseModels.FeeViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Content/admin/_Layout.cshtml";
}

<div class="add_margin">
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <br />
    <fieldset>
        <legend>Add Fee Structure</legend>

       

        <div class="control-label">
            <b>First Semster Fee</b>
        </div>
        <div class="controls">
            @Html.TextBoxFor(model => model.FirstSemesterFee,new { @class = "large m-wrap" })
            @Html.ValidationMessageFor(model => model.FirstSemesterFee )
        </div>

        <div class="control-label">
            <b>Second Semster Onward Fee</b>
        </div>
        <div class="controls">
            @Html.TextBoxFor(model => model.SecondSemesterOnward,new { @class = "large m-wrap" })
            @Html.ValidationMessageFor(model => model.SecondSemesterOnward )
        </div>

       <p>
            <input type="submit" value="Add" class="btn blue" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
</div>